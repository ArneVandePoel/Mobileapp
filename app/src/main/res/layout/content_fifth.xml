<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FifthActivity"
    tools:showIn="@layout/activity_fifth"
    android:background="@drawable/background_main_three">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Spelletjes"
        android:textSize="30dp"
        android:layout_marginBottom="320dp"
        android:fontFamily="@font/grobold" />

    <Button
        android:id="@+id/zeg"
        android:tag="@string/button_zeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="20dp"
        android:text="@string/button_zeg"
        app:layout_constraintBottom_toBottomOf="@id/luister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GaNaarSixsthActivity"
        android:textSize="22dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/grobold"
        android:textColor="@color/colorSafariYellow"
        android:layout_marginTop="80dp"
        />
    <Button
        android:id="@+id/luister"
        android:tag="@string/button_luister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="20dp"
        android:text="@string/button_luister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GaNaarLuister"
        android:textSize="22dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/grobold"
        android:textColor="@color/colorSafariYellow"
        />

</android.support.constraint.ConstraintLayout>